/* pages/carinfo/carinfo.wxss */

/* 光标动画 */
@keyframes focusAni{
  form{
    opacity: 1,
  }
  to{
    opacity: 0
  }
}
.m-focus{
  width: 5rpx;
  height: 32rpx;
  background: #333;
  animation: focusAni 1s linear infinite;
}
page{
  width: 100%;
  height: 100%;
}
.carinfo{
  height: 100%;
  box-sizing: border-box;
}
.carinfo-con{
  padding: 0 24rpx;
  
}
.car_card {
  height: 98rpx;
  background: #fff;
  box-shadow: 0px 6px 10px 0px rgba(221, 243, 255, 0.05);
  border-radius: 10rpx;
  margin-top:20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 24rpx;
  justify-content: space-between;
}
.left{
  color:#333;
  font-size: 28rpx;
  font-weight: 500;
}
.right{
  font-size:28rpx;
  font-weight:500;
  color:#999;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.car-array{
  box-shadow: 0px 6px 10px 0px rgba(221, 243, 255, 0.05);
  border-radius: 10rpx;
  background: #fff;
  margin-top:20rpx;
}
.car-array .car_card{
  margin:0;
  border-radius: 0;
  box-shadow: none;
  background: none;
}
.car-array .car_card:first-child{
  border-bottom:1rpx solid #EEE
}

.add-btn {
  position: fixed;
  width: 600rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(90deg, rgba(91, 222, 130, 1), rgba(31, 211, 145, 1));
  border-radius: 10rpx;
  left: 50%;
  margin-left: -300rpx;
  bottom:100rpx;
  color:#fff;
  font-size:36rpx;
  font-weight: 500;
}