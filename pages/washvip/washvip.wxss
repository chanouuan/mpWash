/* pages/washvip/washvip.wxss */

.enter-card {
  position: fixed;
  background: rgba(91, 222, 130, 0.15);
  box-shadow: 0px 6px 10px 0px rgba(221, 243, 255, 0.05);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 18rpx 24rpx;
  box-sizing: border-box;
}

.enter-left {
  font-size: 22rpx;
  color: #333;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.enter-right {
  font-size: 24rpx;
  color: #36b9fd;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.vip-con {
  padding: 0 24rpx;
}

.vip-card {
  padding: 0 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 6px 10px 0px rgba(221, 243, 255, 0.05);
  border-radius: 10rpx;
  padding-bottom: 40rpx;
}

.card {
  width: 600rpx;
  height: 328rpx;
  margin-top: 81rpx;
  background: rgba(236, 236, 236, 1);
  border-radius: 10rpx;
}

.card image {
  width: 100%;
  height: 100%;
}

.price-list {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 59rpx;
  justify-content: space-between;
  width: 100%;
}

.list-item {
  width: 194rpx;
  height: 128rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border: 1rpx solid #5bde82;
  color: #666;
  border-radius: 10rpx;
  padding-left: 24rpx;
  box-sizing: border-box;
}

.selected-item {
  background: #1fd39a;
  color: #fff;
}

.item-top {
  font-size: 24rpx;
}

.item-bot {
  font-size: 36rpx;
}

.license-card {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 6px 10px 0px rgba(221, 243, 255, 0.05);
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.license-head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 24rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.head-left {
  font-size: 28rpx;
  color: #333;
}

.license-con {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
}

.license-top {
  font-size: 26rpx;
  color: #666;
}

.license-bot {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 24rpx;
}

.buy-know {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 6px 10px 0px rgba(221, 243, 255, 0.05);
  border-radius: 10rpx;
  margin-top:20rpx;
  padding: 24rpx
}
.know-con{
  color:#333;
  font-size:24rpx;
  margin-top:20rpx;
}
.bottom {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 98rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -6px 10px 0px rgba(221, 243, 255, 0.3);
  display: flex;
  flex: row;
  align-items: center;
  justify-content: space-between;
}

.all {
  margin-left: 47rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
}

.recharge-btn {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #1fd390;
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 47rpx;
}
