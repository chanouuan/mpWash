/* pages/searchpage/searchpage.wxss */
.top {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 6rpx 16rpx 0rpx rgba(39, 174, 248, 0.05);
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 88rpx;
  width: 100%;
  position: fixed;
  box-sizing: border-box;
  padding: 0 24rpx;
}

.store-list {
  padding: 0 24rpx;
  display: flex;
  margin-top: 88rpx;
  flex-direction: column;
  padding-bottom: 20rpx;
}

.search-list {
  margin-top: 88rpx;
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  z-index: 111;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.search-pannel {
  background: #fff;
  box-shadow: 0px 6rpx 10rpx 0px rgba(221, 243, 255, 0.05);
  border-radius: 10rpx;
  margin-top: 20rpx;
  max-height:1000rpx;

}

.s-list-item {
  display: flex;
  flex-direction: row;
  padding: 29rpx 24rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  align-items: center;
  justify-content: space-between
}

.s-left .s-l-top {
  font-size: 33rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}
.s-left .s-l-bot {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(102,102,102,1);
  margin-top:21rpx
}


._placeholder {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}

.search-bar {
  background: rgba(249, 249, 249, 1);
  border-radius: 28rpx;
  height: 56rpx;
  line-height: 56rpx;
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 24rpx;
}

.search-bar input {
  font-size: 24rpx;
  color: #333;
  width: 100%;
}

.cancel {
  padding-left: 24rpx;
  font-size: 28rpx;
  color: #999;
  width: 64rpx;
  text-align: center;
}
