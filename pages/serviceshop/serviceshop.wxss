}
.shop-con {
  padding: 0 24rpx;
}

.tab {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background: #fff;
  box-shadow: 0px 6px 10px 0px rgba(221, 243, 255, 0.05);
  border-radius: 10rpx;
}

.tab_list {
  flex: 1;
  text-align: center;
  color:#999;
  font-weight: 500;
  font-size:32rpx;
  height: 73rpx;
  line-height: 73rpx;
}
.tab_list:first-child{
