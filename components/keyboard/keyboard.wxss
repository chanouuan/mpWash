/* components/keyboard/keyboard.wxss */
@import "../../iconfont.wxss";

.license-keyboard {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999999;
  background: #d3d7dc;
  width: 100%;
  padding: 12rpx 0 40rpx;
}

.keyboard-head {
  background: #fff;
  height: 60rpx;
  width: 100%;
  position: absolute;
  top: -59rpx;
  left: 0;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
}

.keyboard-close {
  position: absolute;
  right: 43rpx;
  font-size: 28rpx;
  color: #5bde82;
}

.province {
  width: 100%;
  height: 432rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
}

.key-item {
  width: 63rpx;
  height: 84rpx;
  text-align: center;
  line-height: 63rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2rpx 0px 0px rgba(150, 153, 158, 0.82);
  border-radius: 10rpx;
  color: #000;
  font-size: 30rpx;
  margin-right: 12rpx;
}

.key-hover {
  background: #9ca3ad;
}

.key-item:last-child {
  margin: 0;
}

.key {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.no-btn {
  background: #9ca3ad;
  color: #666;
}

.delete-key {
  width: 84rpx;
  height: 84rpx;
  background: #9ca3ad;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 2rpx 0px 0px rgba(150, 153, 158, 0.82);
  border-radius: 10rpx;
  color: #000;
  position: relative;
  left: 12rpx;
}

.hover-delete {
  background: #fff;
}

.license-num {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.license-item {
  color: #333;
}
